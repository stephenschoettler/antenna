{
  "name": "antenna",
  "version": "0.1.0",
  "description": "Intelligent SMS gateway extension for OpenClaw - sensing signals, protecting focus",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
