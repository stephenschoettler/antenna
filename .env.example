# Antenna Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# TELEGRAM (Required for notifications)
# =============================================================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram chat ID (where notifications will be sent)
# Get it by messaging your bot, then visiting:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=123456789

# =============================================================================
# RABBITMQ (Required for DekuSMS bidirectional SMS)
# =============================================================================
# Full RabbitMQ connection URL
# Format: amqp://username:password@host:port/vhost
RABBITMQ_URL=amqp://deku_user:change_this_password@localhost:5672

# Or individual components (if not using RABBITMQ_URL)
# RABBITMQ_HOST=localhost
# RABBITMQ_PORT=5672
# RABBITMQ_USERNAME=deku_user
# RABBITMQ_PASSWORD=change_this_password
# RABBITMQ_VHOST=/

# =============================================================================
# TWILIO (Optional - for direct SMS via Twilio API)
# =============================================================================
# Get from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+15551234567

# =============================================================================
# SMTP (Optional - for email auto-responses)
# =============================================================================
# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# From address for outgoing emails
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# ANTHROPIC (Optional - for AI-powered responses)
# =============================================================================
# Get from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-...

# =============================================================================
# SERVER
# =============================================================================
# Port for the webhook server
PORT=3000

# Environment (development, production)
NODE_ENV=production

# Path to config file (default: ./antenna.config.yaml)
ANTENNA_CONFIG_PATH=./antenna.config.yaml

# =============================================================================
# LOGGING (Optional)
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file path (if file logging is enabled)
LOG_FILE=./logs/antenna.log
